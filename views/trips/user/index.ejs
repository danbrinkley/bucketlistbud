<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" rel="stylesheet">
  <link rel='stylesheet' href='/css/style.css' />

  
</head>
<body>
  <nav>
    <div class="nav-ctr">

        <div class='header-logo'>
          <a href="/trips" alt="home">
          <img src="/images/header_logo.png" alt="logo"></a>
          </div>

            <div class="my-trips-btn">
              <a href="/trips %>"><button>ALL TRIPS</button></a>
              </div>
              

        
        
        <div class="logout">
          <a href="/auth/logout"><button>LOGOUT</button></a>
        </div>
      
    </div>
  </nav>
  
    <h3>Hi, <%= user.name %></h3>  
    <h5 id="dashboard-header">Your Bucket List!</h5>

 <div class="dashboard-ctr">
  <% if (trips.length) { %>
    <div class="table-ctr">
    <table class= "striped">
      <thead>
        <tr>
          <th>Title</th>
          <th>Location</th>
          <th>Event Date</th>
        </tr>
      </thead>
      <tbody>
        <% trips.forEach(function(t) { %>
        <tr>
          <td><%= t.title %></td>
          <td><%= t.location %></td>
          <td><%= t.eventDate %></td>
          <td><a href="/trips/<%= t._id %>">More Details</a></td>
          <td><a href="/trips/edit/<%= t._id %>" class="btn-floating btn-small waves-effect waves-light orange"><i class="fas fa-edit"></i></a></td>
            <td>
            <form action="/trips/<%= t._id %>" method="POST" id="delete-trips"> 
              <input type="hidden" name="_method" value="DELETE">
              <button type="submit" class="btn-small btn red">
                <i class="fas fa-trash"></i>
            </button>
            </form>
          </td>

          
        </tr>
        <% }); %>
      </tbody>
    </table>
    <% } else { %>
    <h5>You have no trips on your list. Please Add Below. </h5>
    <% } %>
  </div>
</div>
</div>
<div class="fixed-action-btn">
    <a href="/trips/new" class="btn-floating btn-large waves-effect waves-light orange"><i class="fas fa-plus"></i></a>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/ckeditor/4.14.1/ckeditor.js"
          integrity="sha256-bEIQpI72w9NJuIVhTLFUF2/8uxl0u5800r8ddViuv+o=" crossorigin="anonymous"></script>
  
  <script>
          M.Sidenav.init(document.querySelector('.sidenav'))
          M.FormSelect.init(document.querySelector('select'))
          CKEDITOR.replace('body', {
              plugins: 'wysiwygarea, toolbar, basicstyles, link'
          })
      </script>
  
  </script>
  </body>
  </html>
