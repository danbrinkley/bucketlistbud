   <div class="new-form-ctr">
  <div class='content-stack'>
    <h2>Add to Your Bucket List!</h2>
    <div class="input-field col s12">
    <form action="/trips" method="POST" class="new-form">
        <label>
            Trip:
            <input type="text" name="title" id="new"/>
        </label>
        <label>
            Location:
            <input type="text" name="location" id="new"/>
        </label>

        <label>
            Date:
            <input type="datetime-local" name="eventDate" id="new"/>
        </label>

        <label>
          Describe Your Bucket List Travel Location:
          <input type="text" name="description" id="new"/>
        </label>
        <div class="input-field col s12">
          <select name="stay" id="new">
            <option value="stayOpt" >Choose your stay</option>
            <option value="Hotel">Hotel</option>
          <option value="AirBnB">AirBnB</option>
          <option value="With Family/Friends">With Family/Friends</option>
          <option value="Be a Nomad">Be a Nomad</option>
          </select>
          <label >Where would you want to stay?</label>
        </div>
        <input type="submit" value="Add Trip" id="add-submit-btn"/>
    </form>
  </div>
