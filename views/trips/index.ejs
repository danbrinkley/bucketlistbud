<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" rel="stylesheet">
  <link rel='stylesheet' href='/css/style.css' />

  
</head>
<body>
  <nav>
    <div class="nav-ctr">

        <div class='header-logo'>
          <a href="/trips" alt="home">
          <img src="/images/header_logo.png" alt="logo"></a>
          </div>

          <div class="my-trips-btn">
            <a href="/trips/user/<%= user._id %>"><button>MY TRIPS</button></a>
            </div>
              

        
        
        <div class="logout">
          <a href="/auth/logout"><button>LOGOUT</button></a>
        </div>
      
    </div>
  </nav>
   
<h1 class="center">ALL TRIPS</h1>
<div class="index-ctr">
<% if (trips.length) { %>
  <div class="row">  
    <% trips.forEach(trip => { %>
    <div class="col s5 m4">
      <div class="card">
        <div class="card-image">
          
          <img src="https://source.unsplash.com/800x600/?travel" alt="luggage">
          
        </div>
        
        <div class="card-content" id="card-content">
                  <span class="card-title"><a href="/trips/<%= trip._id %>"><button id="index-card-title">"<%= trip.title %>"</button></span></a>
                </div>
                <div class="card-action" id="card-action">
                  <div class="user-image">
                  <img src="<%= trip.user.image %>" alt="profile-image" class="circle small">
                  </div>
  
                  <div class="user-name">
                  <a href="/trips/user/<%= user._id %>"><%= trip.user.name %></a>
                  </div>
                </div>
              </div> 
              </div>
                
                <% }) %>
                <% } else { %>
                  <h5>You have no trips on your list. Please Add Below.</h5>
                  <% } %>
                </div>
                </div>
      </div>            
    </div>
          
  
<div class="fixed-action-btn">
  <a href="/trips/new" class="btn-floating btn-large waves-effect waves-light orange"><i class="fas fa-plus"></i></a>
</div>               
<%- include('../partials/footer') %>
 
